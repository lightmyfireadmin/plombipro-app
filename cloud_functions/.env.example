# PlombiPro Cloud Functions Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# SendGrid Configuration
# ============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ============================================
# Chorus Pro Configuration
# ============================================
CHORUS_PRO_CLIENT_ID=your-chorus-pro-client-id
CHORUS_PRO_CLIENT_SECRET=your-chorus-pro-client-secret
CHORUS_PRO_API_URL=https://api.chorus-pro.gouv.fr/

# ============================================
# Google Cloud Configuration
# ============================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# ============================================
# Cloud Function URLs (for inter-function calls)
# ============================================
SEND_EMAIL_FUNCTION_URL=https://region-project.cloudfunctions.net/send_email
