# PlombiPro Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ============================================
# Stripe Configuration
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# SendGrid Configuration (for emails)
# ============================================
# Get this from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ============================================
# Google Cloud Configuration (for OCR and scrapers)
# ============================================
# Get service account credentials from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ============================================
# Chorus Pro Configuration (for French e-invoicing)
# ============================================
# Get these from: https://portail.chorus-pro.gouv.fr/
CHORUS_PRO_CLIENT_ID=your-chorus-pro-client-id
CHORUS_PRO_CLIENT_SECRET=your-chorus-pro-client-secret
CHORUS_PRO_API_URL=https://api.chorus-pro.gouv.fr/

# ============================================
# Cloud Functions URLs
# ============================================
# These will be generated after deploying your Cloud Functions
SEND_EMAIL_FUNCTION_URL=https://region-project.cloudfunctions.net/send_email
OCR_PROCESSOR_FUNCTION_URL=https://region-project.cloudfunctions.net/process_ocr
INVOICE_GENERATOR_FUNCTION_URL=https://region-project.cloudfunctions.net/invoice_generator
FACTURX_GENERATOR_FUNCTION_URL=https://region-project.cloudfunctions.net/generate_facturx
CHORUS_PRO_SUBMITTER_FUNCTION_URL=https://region-project.cloudfunctions.net/submit_to_chorus_pro

# ============================================
# Rate Limiting (optional)
# ============================================
# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60
# Maximum requests per hour per user
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Application Configuration
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development
# Enable debug logging
DEBUG_MODE=true
# Support email for the application
SUPPORT_EMAIL=support@plombipro.com
